@model Employee
@if(Model == null)
{
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Create Employee</h2>
                <hr />

            </div>
            <div class="mb-3">
                <label asp-for="Name">Employee Name</label>
                <input asp-for="Name" type="text" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger-emphasis"></span>
            </div>
            <div class="mb-3">
                <label asp-for="email">Employee Email</label>
                <input asp-for="email" type="email" class="form-control" required />
                <span asp-validation-for="email" class="text-danger-emphasis"></span>

            </div>
            <div class="mb-3">
                <label asp-for="phone">Employee Phone</label>
                <input asp-for="phone" type="text" class="form-control" required />
                <span asp-validation-for="phone" class="text-danger-emphasis"></span>

            </div>
            <div class="mb-3">
                <label asp-for="city">Employee City</label>
                <input asp-for="city" type="text" class="form-control" />
                <span asp-validation-for="city" class="text-danger-emphasis"></span>

            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
            <a asp-controller="Employee" asp-action="employee" class="btn btn-primary" style="width:150px;">Back To List</a>
        </div>
    </form>
}
else
{
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Employee</h2>
                <hr />
            </div>

            <!-- Hidden Input for Emp_Id -->
            <input type="hidden" asp-for="Emp_Id" />

            <div class="mb-3">
                <label asp-for="Name">Employee Name</label>
                <input asp-for="Name" type="text" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger-emphasis"></span>
            </div>
            <div class="mb-3">
                <label asp-for="email">Employee Email</label>
                <input asp-for="email" type="email" class="form-control" required />
                <span asp-validation-for="email" class="text-danger-emphasis"></span>
            </div>
            <div class="mb-3">
                <label asp-for="phone">Employee Phone</label>
                <input asp-for="phone" type="text" class="form-control" required />
                <span asp-validation-for="phone" class="text-danger-emphasis"></span>
            </div>
            <div class="mb-3">
                <label asp-for="city">Employee City</label>
                <input asp-for="city" type="text" class="form-control" />
                <span asp-validation-for="city" class="text-danger-emphasis"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
            <a asp-controller="Employee" asp-action="employee" class="btn btn-primary" style="width:150px;">Back To List</a>
        </div>
    </form>

}


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}